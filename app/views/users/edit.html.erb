<h2>User info</h2>

<%= form_with model:@user do |f| %>
<div class ="form_group">
   <label for="user_Name">Name</label>
   <%= f.text_field:name,autofocus: true,id:"userName",placeholder:"name"%>
</div>
<div class ="form_group">
   <label for="user_image">Image</label>
   <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>  
</div>
<div class ="form_group">
   <label for="user_introduction">Introduction</label>
   <%= f.text_area:introduction,autofocus: true,id:"userIntroduction",placeholder:"introduction"%>
</div>

<%= f.submit "Update User" %>
<% end %>