<h2>New Book</h2>

<% if book.errors.any? %>
  <div>
    <ul style="color: red">
      <% book.errors.full_messages.each do |message| %>
       <h3><%= book.errors.count %> errors prohibited this obj from being saved</h3>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div
  
<%= form_with model:@book do |f| %>
 <div class="field">
    <%= f.label :Title %><br />
    <%= f.text_field :title %>
  </div>

  <div class="field">
     <%= f.label :Opinion %><br />
     <%= f.text_area :body %>
  </div>
  <%= f.submit 'Create Book' %>
 <% end %>