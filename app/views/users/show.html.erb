
<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= render 'books/error', book: @book %>
      <%= render 'profile', user: @user %>
      <%= render 'books/create', book: @book %>
    </div>

<!-- ユーザーの投稿したbooks一覧 -->

    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      
      <table class="table table-hover table-invers">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        
        <tbody>
      <% @user.books.each do |book| %>
      <tr>
        <td><%= image_tag @user.get_profile_image(80,80) %></td>
        <td><%= link_to book.title, book_path %></td>
        <td><%= book.body %></td>
       </tr>
       <% end %> 
       </tbody>
      </table>
    </div>
 </div>

