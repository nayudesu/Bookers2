<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= render 'users/profile', user: @book.user %>
      <%= render 'create', book: @book %>
    </div>
    
    <div class="col-md-8 offset-md-1">
     <h2>Book　detail</h2>
     <table class="table">
      <tbody>
        <tr>
           <td><%= image_tag @book.user.get_profile_image(80,80) %></br><%= link_to @book.user.name, user_path(@book.user) %>
           </td>
           <td><%= link_to @book.title,  book_path %></td>
           <td><%= @book.body %></td>
           <% if @book.user == current_user %> <!--ログインしているユーザー-->
           <td><%= link_to "Edit", edit_book_path(@book.id) %></td>
           <td><%= link_to "Destory", book_path(@book), method: :delete %></td>　 
          <% end %>
        </tr>
     </table>
    </div>
  </div>
</div>